{
    "version": 2,
    "builds": [
        {
            "src": "backend/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/next"
        }
    ],
    "routes": [
        { "src": "/api/flat/(.*)", "dest": "backend/server.js" },
        { "src": "/(.*)", "dest": "frontend/$1" }
    ]
}